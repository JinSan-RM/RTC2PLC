<TimeBox@BoxLayout>
    orientation: 'horizontal'
    title: "취출 SOL"
    padding: 2
    spacing: 2

    Label:
        text: root.title
        font_name: 'NanumGothic'
        bold: True

    Button:
        text: "0.0 초"
        font_name: 'NanumGothic'
        background_normal: ""
        background_down: ""
        background_color: 0, 0, 0, 0
        color: 1, 1, 1, 1
        on_press: root.on_time_setting(self, "delay")

    Button:
        text: "0.0 초"
        font_name: 'NanumGothic'
        background_normal: ""
        background_down: ""
        background_color: 0, 0, 0, 0
        color: 1, 1, 1, 1
        on_press: root.on_time_setting(self, "duration")