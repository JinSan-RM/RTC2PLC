<RunBox@BoxLayout>
    orientation: 'vertical'
    spacing: 5
    title: "항목"
    type: "None"
    num: 0

    Label:
        text: root.title
        font_name: 'NanumGothic'
        bold: True
        color: 1, 1, 1, 1
        size_hint_y: 0.4
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'horizontal'
        spacing: 5

        Button:
            text: "운전"
            font_name: 'NanumGothic'
            bold: True
            color: 0, 0, 1, 1
            on_press: root.on_start

        Button:
            text: "정지"
            font_name: 'NanumGothic'
            bold: True
            color: 0, 0, 1, 1
            on_press: root.on_stop