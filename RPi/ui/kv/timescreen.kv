# 시간 설정
<TimeScreen>:
    name: 'time'
    orientation:'horizontal'
    padding: 10
    spacing: 10

    # 왼쪽: 위치 박스들
    GridLayout:
        cols: 1
        spacing: 10
        size_hint_x: 0.45

        LocationBox:
            title: "#1 위치"
            option_name_1: "LOC_1 start"
            option_name_2: "LOC_1 stop"

        LocationBox:
            title: "#2 위치"
            option_name_1: "LOC_2 start"
            option_name_2: "LOC_2 stop"

        LocationBox:
            title: "#3 위치"
            option_name_1: "LOC_3 start"
            option_name_2: "LOC_3 stop"

        LocationBox:
            title: "#4 위치"
            option_name_1: "LOC_4 start"
            option_name_2: "LOC_4 stop"

    # 오른쪽: 사이즈 이동, 동작시간, 버튼들
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint_x: 0.45

        LocationBox:
            title: "사이즈 위치 이동"
            text1: "사이즈 변경 시간"
            text2: "사이즈 복귀 시간"
            

        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1

                Label:
                    text: ""
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Label:
                    text: "동작시간"
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Label:
                    text: "적용시간"
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

            TimeBox:
                title: "취출#1 SOL"
            
            TimeBox:
                title: "취출#2 SOL"

            TimeBox:
                title: "취출#3 SOL"

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.4
            spacing: 5

            Button:
                text: "메인화면"
                color: 0, 0, 1, 1
                on_press: root.manager.current = 'main'

            Button:
                text: "수동화면"
                color: 0, 0, 1, 1
                on_press: root.manager.current = 'manual'

            Button:
                text: "서보화면"
                color: 0, 0, 1, 1
                on_press: root.manager.current = 'servo'

# 시간 설정용 템플릿
<LocationBox@BoxLayout>:
    orientation: 'vertical'
    spacing: 5
    title: "위치"
    text1: "브로워 동작 시간"
    text2: "브로워 정지 시간"
    option_name_1: "start"
    option_name_2: "stop"

    Label:
        text: root.title
        bold: True
        color: 1, 1, 1, 1
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    GridLayout:
        cols: 2

        Label:
            text: root.text1
            halign: 'left'
            valign: 'middle'

        Button:
            text: "0.0 초"
            background_normal: ""
            background_down: ""
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_press: root.on_time_setting(self, root.option_name_1)

        Label:
            text: root.text2
            halign: 'left'
            valign: 'middle'

        Button:
            text: "999.0 초"
            background_normal: ""
            background_down: ""
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_press: root.on_time_setting(self, root.option_name_2)

<TimeBox@BoxLayout>
    orientation: 'horizontal'
    title: "취출 SOL"

    Label: text: root.title

    Button:
        text: "0.0 초"
        background_normal: ""
        background_down: ""
        background_color: 0, 0, 0, 0
        color: 1, 1, 1, 1
        on_press: root.on_time_setting(self, "delay")

    Button:
        text: "0.0 초"
        background_normal: ""
        background_down: ""
        background_color: 0, 0, 0, 0
        color: 1, 1, 1, 1
        on_press: root.on_time_setting(self, "duration")

<TimeInput@BoxLayout>
    orientation: 'vertical'
    size_hint: None, None
    size: 100, 180

    Label:
        size_hint_y: 0.1
        text: "시간 입력"
        bold: True
        halign: 'center'
        valign: 'middle'
        color: 1, 1, 1, 1
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        id: text_input
        size_hint_y: 0.15
        text: "0"
        bold: True
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'horizontal'

        GridLayout:
            cols: 3
            spacing: 10

            Button:
                text: '1'
                on_press: root.add_digit('1')

            Button:
                text: '2'
                on_press: root.add_digit('2')

            Button:
                text: '3'
                on_press: root.add_digit('3')

            Button:
                text: '4'
                on_press: root.add_digit('4')

            Button:
                text: '5'
                on_press: root.add_digit('5')

            Button:
                text: '6'
                on_press: root.add_digit('6')

            Button:
                text: '7'
                on_press: root.add_digit('7')

            Button:
                text: '8'
                on_press: root.add_digit('8')

            Button:
                text: '9'
                on_press: root.add_digit('9')

            Button:
                text: '0'
                on_press: root.add_digit('0')

            Button:
                text: '.'
                on_press: root.add_digit('.')

            Button:
                text: '←'
                on_press: root.backspace()

        GridLayout:
            cols: 3
            spacing: 10

            Button:
                size_hint_y: 0.5
                text: '확인'
                on_press: root.confirm_time()

            Button:
                size_hint_y: 0.5
                text: '취소'
                on_press: root.dismiss()