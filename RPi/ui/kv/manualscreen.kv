# 수동 운전
<ManualScreen>:
    name: 'manual'
    orientation: 'vertical'
    spacing: 10
    padding: 10

    # 헤드라인
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.05

        Label:
            text: "ST01 LOADING"
            bold: True
            halign: "left"
            valign: "middle"
            text_size: self.size

        Label:
            id: runtime_txt
            text: "공정시간: 0.0"
            bold: True
            halign: "right"
            valign: "middle"
            text_size: self.size

    # 운전 관련
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.15

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2

            Label:
                text: "운전 모드"
                bold: True

            Button:
                text: "수동운전"
                bold: True
                on_press: root.change_mode()

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: "운전조작"
                bold: True
                halign: "center"
                valign: "middle"
                text_size: self.size

            GridLayout:
                cols: 4

                Button:
                    text: "시작"
                    bold: True
                    on_press: root.start_process()
                Button:
                    text: "정지"
                    bold: True
                    on_press: root.stop_process()
                Button:
                    text: "원점"
                    bold: True
                    on_press: root.go_to_zeropoint()
                Button:
                    text: "고장없음"
                    bold: True
                    on_press: root.check_breakdown()

    # FEEDER PART
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "FEEDER PART"
            bold: True
            size_hint_y: 0.111
            halign: "center"
            valign: "middle"
            text_size: self.size

        GridLayout:
            cols: 4

            RunBox:
                title: "내륜 모터"
                on_start: root.on_start_manual("motor", 0)
                on_stop: root.on_stop_manual("motor", 0)

            RunBox:
                title: "외륜 모터"
                on_start: root.on_start_manual("motor", 1)
                on_stop: root.on_stop_manual("motor", 1)
            
            RunBox:
                title: "브로워 SOL"
                on_start: root.on_start_manual("blower_sol", 0)
                on_stop: root.on_stop_manual("blower_sol", 0)

        GridLayout:
            cols: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5

                Label:
                    text: "PUSHER"
                    bold: True
                    size_hint_y: 0.4

                GridLayout:
                    cols: 4

                    Button:
                        text: "위치(1)"
                        bold: True
                        on_press: root.on_first_size()

                    Button:
                        text: "위치(2)"
                        bold: True
                        on_press: root.on_second_size()

                    Button:
                        text: "위치(3)"
                        bold: True
                        on_press: root.on_third_size()

                    Button:
                        text: "위치(4)"
                        bold: True
                        on_press: root.on_fourth_size()

    # CONVEYOR PART
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "컨베어 PART"
            bold: True
            size_hint_y: 0.076
            halign: "center"
            valign: "middle"
            text_size: self.size

        GridLayout:
            cols: 4
            rows: 3

            RunBox:
                title: "취출#1 콘베어"
                controller: root
                type: "convayor"
                num: 1

            RunBox:
                title: "취출#2 콘베어"
                controller: root
                type: "convayor"
                num: 2

            RunBox:
                title: "취출#3 콘베어"
                controller: root
                type: "convayor"
                num: 3

            RunBox:
                title: "취출#4 콘베어"
                controller: root
                type: "convayor"
                num: 4

            RunBox:
                title: "취출#5 콘베어"
                controller: root
                type: "convayor"
                num: 5

            RunBox:
                title: "취출#6 콘베어"
                controller: root
                type: "convayor"
                num: 6

            RunBox:
                title: "취출#1 SOL"
                controller: root
                type: "sol"
                num: 1

            RunBox:
                title: "취출#2 SOL"
                controller: root
                type: "sol"
                num: 2

            RunBox:
                title: "취출#3 SOL"
                controller: root
                type: "sol"
                num: 3

    # 화면 전환
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1

        Button:
            text: "메인화면"
            bold: True
            on_press: root.manager.current = 'main'

        Button: 
            text: "시간설정"
            bold: True
            on_press: root.manager.current = 'time'

        Button:
            text: "서보화면"
            bold: True
            on_press: root.manager.current = 'servo'

# 수동 운전용 템플릿
<RunBox@BoxLayout>
    orientation: 'vertical'
    title: "항목"
    type: "None"
    num: 0

    Label:
        text: root.title
        bold: True
        color: 1, 1, 1, 1
        size_hint_y: 0.4
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'horizontal'

        Button:
            text: "운전"
            bold: True
            color: 0, 0, 1, 1
            on_press: root.on_start

        Button:
            text: "정지"
            bold: True
            color: 0, 0, 1, 1
            on_press: root.on_stop