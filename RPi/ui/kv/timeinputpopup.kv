<TimeInputPopup@BoxLayout>
    orientation: 'vertical'
    size_hint: None, None
    size: 100, 180

    Label:
        size_hint_y: 0.1
        text: "시간 입력"
        font_name: 'NanumGothic'
        bold: True
        halign: 'center'
        valign: 'middle'
        color: 1, 1, 1, 1
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        id: text_input
        size_hint_y: 0.15
        text: "0"
        font_name: 'NanumGothic'
        bold: True
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'horizontal'

        GridLayout:
            cols: 3
            size_hint_x: 0.75
            padding: 5
            spacing: 5

            Button:
                text: '1'
                font_name: 'NanumGothic'
                on_press: root.add_digit('1')

            Button:
                text: '2'
                font_name: 'NanumGothic'
                on_press: root.add_digit('2')

            Button:
                text: '3'
                font_name: 'NanumGothic'
                on_press: root.add_digit('3')

            Button:
                text: '4'
                font_name: 'NanumGothic'
                on_press: root.add_digit('4')

            Button:
                text: '5'
                font_name: 'NanumGothic'
                on_press: root.add_digit('5')

            Button:
                text: '6'
                font_name: 'NanumGothic'
                on_press: root.add_digit('6')

            Button:
                text: '7'
                font_name: 'NanumGothic'
                on_press: root.add_digit('7')

            Button:
                text: '8'
                font_name: 'NanumGothic'
                on_press: root.add_digit('8')

            Button:
                text: '9'
                font_name: 'NanumGothic'
                on_press: root.add_digit('9')

            Button:
                text: '0'
                font_name: 'NanumGothic'
                on_press: root.add_digit('0')

            Button:
                text: '.'
                font_name: 'NanumGothic'
                on_press: root.add_digit('.')

            Button:
                text: '←'
                font_name: 'NanumGothic'
                on_press: root.backspace()

        StackLayout:
            orientation: 'bt-rl'
            padding: 5
            spacing: 5

            Button:
                size_hint_y: 0.25
                text: '취소'
                font_name: 'NanumGothic'
                bold: True
                on_press: root.dismiss()

            Button:
                size_hint_y: 0.25
                text: '확인'
                font_name: 'NanumGothic'
                bold: True
                on_press: root.confirm_time()