# 서보 화면
<ServoScreen>
    name: 'servo'
    orientation: 'vertical'

    Button:
        text: "메인화면"
        color: 0, 0, 1, 1
        on_press: root.manager.current = 'main'

    Button:
        text: "수동화면"
        color: 0, 0, 1, 1
        on_press: root.manager.current = 'manual'

    Button:
        text: "시간설정"
        color: 0, 0, 1, 1
        on_press: root.manager.current = 'time'